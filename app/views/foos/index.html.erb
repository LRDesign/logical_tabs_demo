<h1>Foos Controller</h1>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'prototype.js' %>
  <%= javascript_include_tag 'logical_tabs_prototype.js' %>
<% end %>
                                                        
<p>This is a controller just for demonstration purposes.  The tabbed panel is rendered
via ERB in this view, and uses Prototype for javascript.</p>

<%= link_to "See the Bars controller for a HAML/jQuery example.", bars_path %> 

<% create_tabbed_panel do |tabbed_panel| %>
  <% tabbed_panel.add_tab("Tab One") do %>
    Content for Tab One
  <% end %>  
  <% tabbed_panel.add_tab("Tab Two") do %>
    Content for Tab Two
  <% end %>  
  <% tabbed_panel.add_tab("Tab Three") do %>
    <p>Content for Tab Three</p>
  <% end %>          
<% end %>
